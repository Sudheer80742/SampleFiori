<mvc:View
    controllerName="registration.controller.subjectReg"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:m="sap.m"
    xmlns:smarttable="sap.ui.comp.smarttable"
    xmlns="sap.uxap"
    xmlns:core="sap.ui.core"
>
    <ObjectPageLayout
        id="idObjectPageLayout"
        showFooter="{data>/edit}"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle>
                <actions>
                    <m:Button
                        text="Edit"
                        type="Emphasized"
                        press="onEdit"
                        visible="{=!${data>/edit}}"
                    />
                    <m:Button
                        type="Transparent"
                        text="Delete"
                        visible="{=!${data>/edit}}"
                        press="onDeleteSubject"
                    />
                    <m:Image
                        id="imgsrc"
                        class="barcode"
                        press="dowloadBarcode"
                    />
                </actions>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>
        <!-- <headerContent>
           <m:Title text="{RegNo}"></m:Title>
        </headerContent> -->
        <footer>
            <m:Toolbar>
            <m:Button
                    id="idMessagePopoverBtn"
                    icon="{ path: 'message>/', formatter: '.buttonIconFormatter' }"
                    type="{ path: 'message>/', formatter: '.buttonTypeFormatter' }"
                    text="{path: 'message>/', formatter: '.highestSeverityMessages' }"
                    press="handleMessagePopoverPress"
                    ariaHasPopup="Dialog"
                />
                <m:ToolbarSpacer />

                <m:Button
                    text="Save"
                    press="onSave"
                    type="Emphasized"
                />
                <m:Button
                    text="Cancel"
                    press="onCancelEdit"
                />
            </m:Toolbar>
        </footer>
        <sections>
            <ObjectPageSection
                titleUppercase="false"
                title="General"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.general"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Address"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.address"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Communication"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.communication"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Emergency"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.emergency"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Documentation"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.documentation"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Screening History"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.screening"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Study Participation History"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.studyParticipationHistory"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Remarks"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.remarks"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
            <ObjectPageSection
                titleUppercase="false"
                title="Signature"
            >
                <subSections>
                    <ObjectPageSubSection
                        titleUppercase="false"
                        title=""
                    >
                        <blocks>
                            <core:Fragment
                                fragmentName="registration.fragments.signed"
                                type="XML"
                            />
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
