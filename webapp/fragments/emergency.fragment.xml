<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
>
    <smartForm:SmartForm
        id="emgFormId"
        editable="{data>/edit}"
    >
        <smartForm:layout>
            <smartForm:ColumnLayout
                columnsM="2"
                columnsL="3"
                columnsXL="4"
            />
        </smartForm:layout>
        <smartForm:Group>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgCntName}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgCntNo}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{RelWithSub}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    visible="{data>/edit}"
                    change="isCheck"
                    value="{EmgCntAdd}"
                >
                    <smartField:configuration>
                        <smartField:Configuration
                            displayBehaviour="TrueFalse"
                        />
                    </smartField:configuration>
                </smartField:SmartField>
            </smartForm:GroupElement>

            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgAdd1}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgAdd2}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgAdd3}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgCity}"
                />
            </smartForm:GroupElement>

            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgDist}"
                />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgState}"
                />
            </smartForm:GroupElement>

            <smartForm:GroupElement>
                <smartField:SmartField value="{EmgZip}" />
            </smartForm:GroupElement>
            <smartForm:GroupElement>
                <smartField:SmartField
                    change="capitalizeFirstLetter"
                    value="{EmgCountry}"
                />
            </smartForm:GroupElement>
        </smartForm:Group>
    </smartForm:SmartForm>
</c:FragmentDefinition>
