<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
>
    <Dialog title="Add registraion details">
        <smartForm:SmartForm editable="true">
            <smartForm:layout>
                <smartForm:ColumnLayout
                    columnsM="2"
                    columnsL="3"
                    columnsXL="4"
                />
            </smartForm:layout>
            <smartForm:Group>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="autoRegNO"
                        value="{SiteCode}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{SiteDesc}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="autoRegNO"
                        value="{SubjectId}"
                    />
                </smartForm:GroupElement>

                <smartForm:GroupElement>
                    <smartField:SmartField
                        editable="false"
                        value="{RegNo}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="autoInitl"
                        value="{SubjectName}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{SurName}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        editable="false"
                        value="{SubjectInitials}"
                    />
                </smartForm:GroupElement>

                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="autoInitl"
                        value="{FatSurname}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        value="{MotSurname}"
                        change="autoInitl"
                    />
                </smartForm:GroupElement>

                <smartForm:GroupElement>
                    <smartField:SmartField
                        value="{Dob}"
                        change="Calculatedob"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        editable="false"
                        value="{Age}"
                    />
                </smartForm:GroupElement>

                <smartForm:GroupElement>
                    <smartField:SmartField value="{Gender}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{Ethnicity}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{EthOthers}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{HighGrdStdy}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="capitalizeFirstLetter"
                        value="{Occupation}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Languages}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Nationality}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{NatIdfNo}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        change="calculateBMI"
                        value="{Height}"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        value="{Weight}"
                        change="calculateBMI"
                    />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField
                        editable="false"
                        value="{Bmi}"
                    />
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        <beginButton>
            <Button
                type="Emphasized"
                text="Submit"
                press="addRegistrationDetails"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="cancel"
            />
        </endButton>
    </Dialog>
</c:FragmentDefinition>
