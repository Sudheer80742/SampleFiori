<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog afterClose="onEscClose">
        <VBox id="videoContainer" />
        <beginButton>
            <Button
                text="Capture Photo"
                press="onCapturePhoto"
                type="Emphasized"
                visible="false"
                id="captureButton"
            />
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="cancelVideo"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
